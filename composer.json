{
    "name": "nimut/testing-framework",
    "description": "TYPO3 testing framework that provides base classes and configuration for PHPUnit tests",
    "keywords": [
        "TYPO3 CMS",
        "PHPUnit",
        "testing"
    ],
    "homepage": "https://github.com/Nimut/TYPO3-testing-framework",
    "license": [
        "GPL-2.0+"
    ],
    "authors": [
        {
            "name": "Nicole Cordes",
            "email": "typo3@cordes.co",
            "role": "Developer"
        },
        {
            "name": "Helmut Hummel",
            "email": "info@helhum.io",
            "role": "Developer",
            "homepage": "http://helhum.io"
        }
    ],
    "require": {
        "typo3/cms-core": "^6.2 || ^7.6 || ^8.0 <8.7",
        "typo3/cms-extbase": "^6.2 || ^7.6 || ^8.0 <8.7",
        "typo3/cms-fluid": "^6.2 || ^7.6 || ^8.0 <8.7",
        "phpunit/phpunit": "^4.8 || ^5.6",
        "mikey179/vfsStream": "^1.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Nimut\\TestingFramework\\": "src/TestingFramework/",
            "TYPO3\\CMS\\Core\\Tests\\": "src/TestingFramework/Compatibility/",
            "TYPO3\\CMS\\Fluid\\Tests\\": "src/TestingFramework/Compatibility/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
            "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/",
            "TYPO3\\Components\\TestingFramework\\Core\\": "src/TestingFramework/Compatibility/Components/",
            "TYPO3\\Components\\TestingFramework\\Core\\Unit\\": "src/TestingFramework/Compatibility/Components/",
            "TYPO3\\Components\\TestingFramework\\Fluid\\Unit\\": "src/TestingFramework/Compatibility/Components/"
        }
    },
    "config": {
        "preferred-install": {
            "typo3/cms": "source"
        },
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    },
	"include-path": [
		".Build/vendor/pear/http_request2/",
		".Build/vendor/pear/net_url2/"
	]
}
